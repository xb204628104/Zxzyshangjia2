<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/main_viewpager"
        ></android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc"></View>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_three_kongzhi"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_kongzhi"
                android:src="@mipmap/kongzhitai_black"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />
            <TextView
                android:id="@+id/tv_three_kongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="控制台"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_three_shape"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_shape"
                android:src="@mipmap/gongxiang_black"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/tv_three_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享商城"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_three_my"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_my"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/wode_black"/>
            <TextView
                android:id="@+id/tv_three_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_three_chat"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_three_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/chat_un"/>
            <TextView
                android:id="@+id/tv_three_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>