<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#228ee1"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="商家资料"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/drop_out_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="退出"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="10dp"
           android:paddingBottom="10dp">
           <TextView
               android:layout_marginLeft="15dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="封面图"
               android:textColor="#333"
               android:textSize="16sp"/>

           <ImageView
               android:id="@+id/headpic_setting_iv"
               android:layout_marginRight="8dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:scaleType="fitXY"/>
           <ImageView
               android:layout_marginRight="8dp"
               android:layout_width="9dp"
               android:layout_height="9dp"
               android:src="@mipmap/back"/>
       </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/name_setting_et"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textColor="#666"
                android:textSize="16sp"
                android:background="@null"
                android:gravity="right"

               />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="#333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/phone_setting_et"
                android:background="@null"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textColor="#666"
                android:textSize="16sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家地址"
                android:textColor="#333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/adress_setting_et"
                android:background="@null"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textColor="#666"
                android:textSize="16sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业时间"
                android:textColor="#333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/time_setting_et"
                android:background="@null"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textColor="#666"
                android:textSize="16sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家公告"
                android:textColor="#333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/setting_et_gonggao"
                android:background="@null"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint=""
                android:textColor="#666"
                android:textSize="16sp"
                android:gravity="right"
                />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>
        <LinearLayout
            android:id="@+id/business_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/is_business_tv"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="营业"
                android:textColor="#333"
                android:textSize="16sp"/>

            <ImageView
                android:layout_marginRight="8dp"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@mipmap/back"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"></View>

    </LinearLayout>

    <Button
        android:id="@+id/setting_bt_ok"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="保存"
        android:background="@drawable/shape_button"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/password_setting_tv"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#228ee1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/message_set_tv"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:textColor="#228ee1"/>
    </LinearLayout>
</LinearLayout>