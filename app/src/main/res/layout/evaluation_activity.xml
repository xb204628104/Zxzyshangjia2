<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#228ee1">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的评价"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>
    <com.zxtyshangjia.zxzyshangjia.commen.utils.refresh.BGARefreshLayout
        android:id="@+id/evaluation_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/evaluation_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/evaluation"
               />
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有"
                    android:textColor="#333"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/evaluation_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#228ee1"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条评论"
                    android:textColor="#333"
                    android:textSize="12sp"/>

            </LinearLayout>
            <com.zxtyshangjia.zxzyshangjia.commen.utils.ListViewForScrollView
                android:id="@+id/evaluation_list_lv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.zxtyshangjia.zxzyshangjia.commen.utils.ListViewForScrollView>


        </LinearLayout>
    </ScrollView>
    </com.zxtyshangjia.zxzyshangjia.commen.utils.refresh.BGARefreshLayout>

</LinearLayout>